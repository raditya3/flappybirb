{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "sourceMap": true,
      "noUnusedLocals": true,
      "module": "es6",
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "lib": [
        "es5",
        "dom"
    ],
      "allowJs": true,
      "moduleResolution": "node",
    },
    "exclude": ["dist", "build", "node_modules"]
  }